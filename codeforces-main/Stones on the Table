import java.util.*;

public class Mavenproject4 {
    
    public static void main(String[] args) {
     Scanner in =new Scanner(System.in);
     int x=in.nextInt();
     String str =in.next();
     int count=0;
        for (int i = 1; i <= x-1; i++) {
            if(str.charAt(i)==str.charAt(i-1)){
                count++;
            }
        }
        System.out.println(count);
    }
}
